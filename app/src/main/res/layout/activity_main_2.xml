<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ecd35624"
    android:orientation="vertical" tools:context=".MainActivity"
    android:weightSum="1">

    <TextView android:text="@string/no_registering_message" android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:id="@+id/informationTextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.20"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:shadowColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lamp on"
        android:id="@+id/onlamp"
        android:layout_weight="0.20"
        android:layout_above="@+id/onfan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:background="#f4e2bc"
        android:layout_toStartOf="@+id/informationTextView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lamp off"
        android:id="@+id/offlamp"
        android:layout_gravity="right"
        android:layout_weight="0.20"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:background="#f4e2bc"
        android:layout_toEndOf="@+id/informationTextView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fan on"
        android:id="@+id/onfan"
        android:layout_gravity="right"
        android:layout_weight="0.20"
        android:layout_below="@+id/offlamp"
        android:layout_alignStart="@+id/offlamp"
        android:layout_marginTop="75dp"
        android:layout_alignEnd="@+id/offlamp"
        android:background="#f4e2bc" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fan off"
        android:id="@+id/offfan"
        android:layout_gravity="right"
        android:layout_weight="0.20"
        android:layout_alignTop="@+id/onfan"
        android:layout_alignStart="@+id/onlamp"
        android:layout_alignEnd="@+id/onlamp"
        android:background="#f4e2bc" />

</RelativeLayout>